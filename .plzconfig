[please]
version = >=17.27.0

[parse]
preloadsubincludes = ///go//build_defs:go
preloadsubincludes = ///shell//build_defs:shell

[PluginDefinition]
name = js

[PluginConfig "please_js_tool"]
ConfigKey = PleaseJsTool
DefaultValue = //tools/please_js
Help = A build label for the please_js companion tool.
Inherit = true

[PluginConfig "node_tool"]
ConfigKey = NodeTool
Help = A build label for the Node.js binary (from js_toolchain).
Optional = true
Inherit = true

[PluginConfig "tailwind_tool"]
ConfigKey = TailwindTool
Help = Build label for the Tailwind CSS standalone CLI (from tailwind_toolchain).
Optional = true
Inherit = true

[PluginConfig "env_prefix"]
ConfigKey = EnvPrefix
DefaultValue = PLZ_
Help = Prefix filter for .env variables exposed as import.meta.env.*.
Optional = true
Inherit = true

[PluginConfig "react_refresh_dep"]
ConfigKey = ReactRefreshDep
DefaultValue = ///js//third_party/js:react-refresh
Help = Build label for react-refresh, used for React Fast Refresh HMR in ESM dev servers.
Optional = true
Inherit = true

[Plugin "js"]
Target = //plugins:js
PleaseJsTool = //tools/please_js
TailwindTool = //third_party/js:tailwind
ReactRefreshDep = //third_party/js:react-refresh

[Plugin "go"]
Target = //plugins:go
gotool = //third_party/go:gotool|go

[Plugin "shell"]
Target = //plugins:shell
